<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rifki.jetpackpro.mymoviesfinal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMovies">
        <activity
            android:name="com.rifki.jetpackpro.mymoviesfinal.ui.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyMovies.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rifki.jetpackpro.mymoviesfinal.ui.home.HomeActivity" />
        <activity
            android:name="com.rifki.jetpackpro.mymoviesfinal.ui.detail.movie.DetailMovieActivity"
            android:label=""
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name="com.rifki.jetpackpro.mymoviesfinal.ui.detail.tvshow.DetailTvShowActivity"
            android:label=""
            android:theme="@style/AppTheme.ActionBar.Transparent" />
    </application>

</manifest>